			<x_label>PROB_THRESH</x_label>
			<y1_label>APCP_03 BRIER SCORE, REL., RES., UNC.</y1_label>
		</tmpl>

        <dep><dep1><fcst_var name="PROB(APCP_03>{thr})"><stat>ROC_AUC</stat></fcst_var></dep1></dep>
	</plot>
	
	<plot name="hwt_prob_auc06" inherits="hwt_prob_auc">
 		<tmpl>
			<data_file>{vx_mask}/grid_stat/thresh_series/{date}/PROB_APCP_06_AUC_F{fcst_lead?format=HH}.data</data_file>
			<plot_file>{vx_mask}/grid_stat/thresh_series/{date}/PROB_APCP_06_AUC_F{fcst_lead?format=HH}.png</plot_file>
			<r_file>{vx_mask}/grid_stat/thresh_series/{date}/PROB_APCP_06_AUC_F{fcst_lead?format=HH}.R</r_file>
