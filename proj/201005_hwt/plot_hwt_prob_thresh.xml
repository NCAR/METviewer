			<y1_label>APCP_06 BRIER SCORE, REL., RES., UNC.</y1_label>
		</tmpl>

        <dep><dep1><fcst_var name="PROB(APCP_06>{thr})"><stat>BRIER</stat><stat>RELIABILITY</stat><stat>RESOLUTION</stat><stat>UNCERTAINTY</stat></fcst_var></dep1></dep>
	</plot>
	
	<plot name="hwt_prob_auc" inherits="hwt_prob" run="false">
		<mar>c(5, 5, 5, 2)</mar>
		<legend_inset>c(0, -.15)</legend_inset>

		<plot_ci>c("none", "none", "none")</plot_ci>
		<pch>c(20, 20, 20)</pch>
		<type>c("b", "b", "b")</type>
		<lty>c(1, 1, 1)</lty>
		<con_series>c(1, 1, 1)</con_series>		
		<colors>c("#000000FF", "#FF55AAFF", "#FFAA00FF")</colors>
		<lwd>c(2, 2, 2)</lwd>
	</plot>
	
	<plot name="hwt_prob_auc03" inherits="hwt_prob_auc">
 		<tmpl>
			<data_file>{vx_mask}/grid_stat/thresh_series/{date}/PROB_APCP_03_AUC_F{fcst_lead?format=HH}.data</data_file>
			<plot_file>{vx_mask}/grid_stat/thresh_series/{date}/PROB_APCP_03_AUC_F{fcst_lead?format=HH}.png</plot_file>
			<r_file>{vx_mask}/grid_stat/thresh_series/{date}/PROB_APCP_03_AUC_F{fcst_lead?format=HH}.R</r_file>
