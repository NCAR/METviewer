<project name="metviewer" default="dist" basedir=".">
	<description>METViewer build file</description>

	<!-- set global properties for this build -->
	<property name="src" location="java"/>
	<property name="lib" location="lib"/>
	<property name="webapp_lib" location="webapp/metviewer/WEB-INF/lib"/>
	<property name="build" location="bin"/>
	<property name="dist"  location="dist"/>
	<property name="tomcat_home" location="/d1/pgoldenb/usr/local/apache-tomcat-5.5.28"/>

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp />

		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}"/>
	</target>

	<!-- Compile the java code from ${src} into ${build} -->
	<target name="compile" depends="init" description="compile the source">
		<javac srcdir="${src}" destdir="${build}" source="1.4">
			<classpath>				
				<pathelement location="${lib}/log4j-1.2.15.jar"/>
				<pathelement location="${lib}/mysql-connector-java-5.1.6.jar"/>
				<pathelement location="${lib}/xercesImpl.jar"/>
				<pathelement location="${webapp_lib}/commons-fileupload-1.2.1.jar"/>
				<pathelement location="${webapp_lib}/commons-io-1.3.2.jar"/>
				<pathelement location="${webapp_lib}/freemarker-2.3.15.jar"/>
				<pathelement location="${webapp_lib}/ognl-2.7.3.jar"/>
				<pathelement location="${webapp_lib}/struts2-core-2.1.8.1.jar"/>
				<pathelement location="${webapp_lib}/xwork-core-2.1.6.jar"/>
			</classpath>
		</javac>
	</target>

	<!-- Create the distribution directory -->
	<target name="dist" depends="compile" description="generate the distribution">
		<mkdir dir="${dist}/lib"/>

		<!-- <jar jarfile="${dist}/lib/metviewer-${DSTAMP}.jar" basedir="${build}"/> -->
		<jar jarfile="${dist}/lib/metviewer.jar" basedir="${build}"/>
		<copy todir="${dist}/R_tmpl">
			<fileset dir="R_tmpl"/>
		</copy>
		<copy todir="${dist}/R_work">
			<fileset dir="R_work"/>
		</copy>
		<copy todir="${dist}/lib">
			<fileset dir="${lib}"/>
		</copy>
		<copy todir="${dist}" file="./batch.sh"/>
	</target>
	
	<target name="webapp" depends="dist" description="build the web application bundle">
		
		<!-- <delete dir="${tomcat_home}/work/Catalina/localhost/metviewer"/> -->
		<delete dir="${dist}/metviewer"/>
		<copy todir="${dist}/metviewer">
			<fileset dir="webapp/metviewer"/>
		</copy>
		
		<copy todir="${dist}/metviewer/WEB-INF/lib">
			<fileset dir="${lib}">
				<include name="*.jar"/>
			</fileset>
		</copy>
		<copy todir="${dist}/metviewer/WEB-INF/lib" file="${dist}/lib/metviewer.jar"/>
		
		<!--
		<jar destfile="${dist}/metviewer.war" basedir="${dist}/metviewer"/>
		
		<delete file="${tomcat_home}/webapps/metviewer.war"/>
		<delete dir="${tomcat_home}/webapps/metviewer"/>
		<copy todir="${tomcat_home}/webapps" file="${dist}/metviewer.war"/>
		-->
	</target>

	<!-- Delete the ${build} and ${dist} directory trees -->
	<target name="clean" description="clean up">
		<delete dir="${build}"/>
		<delete dir="${dist}"/>
		<delete file="${tomcat_home}/webapps/metviewer.war"/>
		<delete dir="${tomcat_home}/webapps/metviewer"/>
	</target>
</project>

